<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

    <body>
        <%- include('../partials/header') %>
            <main>
                <div class="main-product">
                    <section class="product-container wrapper-container">
                        <img src="/images/products/<%= product.image?.name ?? "default-image-product.jpg" %> " alt="imagen producto <%= product.id %>" width="100%">
                        <div class="top-product-info">
                            <ul>
                                <a href="/">
                                    <li>home ></li>
                                </a>
                                <li><%= product.category.name %> ></li>
                                <li><%= product.name %></li>
                            </ul>
                            <article class="brand-name-price">
                                <div class="brand-name">
                                    <div class="brand">
                                        <h3><%= product.brand.name %></h3>
                                    </div>
                                    <div class="name-product">
                                        <h5><%= product.name %></h5>
                                    </div>
                                </div>
                                <div class="price">
                                    <span>$ <%= product.price %> </span>
                                </div>
                            </article>
                            <div class="buy-button">
                                <button class="add-to-cart" onclick="addToCart('<%=product.id %>')">
                                    <i class="fas fa-shopping-cart"></i>
                                    Agregar
                                </button>
                            </div>
                        </div>
                    </section>
                    <section class="bottom-product-info wrapper-container">
                        <h3>Descripción del producto</h3>
                        <p><%= product.description %></p>
                        <h4>Opiniones del producto</h4>
                        <div class="stars-value">
                            <button>
                                <i class="fas fa-star"></i>
                            </button>
                            <button>
                                <i class="fas fa-star"></i>
                            </button>
                            <button>
                                <i class="fas fa-star"></i>
                            </button>
                            <button>
                                <i class="fas fa-star"></i>
                            </button>
                            <button>
                                <i class="fas fa-star"></i>
                            </button>
                        </div>
                        <br><button type="submit" class="product-opinion">Publica tu opinión</button>
                        <a href="#">
                            <div class="look-opinions">
                                Ver opiniones
                            </div>
                        </a>
                    </section>
                </div>
            </main>
            <%- include('../partials/footer') %>
    </body>

</html>