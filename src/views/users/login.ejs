<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/head', {'title': 'Login'}) %>

<body>
    <%- include('../partials/header') %>

        <section class="form-login">
            <form action="/users/login" method="POST">
                <h5>Ingresa a tu cuenta</h5>
                <input class="controls" type="text" name="email" value="" placeholder="Email">
                <% if (locals.errors && errors.email) { %>
                    <div class="text-danger">
                        <%= errors.email.msg %>
                    </div>
                <% } %>
                <input class="controls" type="password" name="password" value="" placeholder="Contraseña">
                <% if (locals.errors && errors.password) { %>
                    <div class="text-danger">
                        <%= errors.password.msg %>
                    </div>
                <% } %>
                <input type="checkbox" value="lsRememberMe" id="remember" name="remember"> <label>Recordarme</label>
                <br>
                <br>
                <button class="buttons" type="submit" name="login">Ingresar</button>
                <p><a href="#">¿Olvidaste tu Contraseña?</a></p>
                <p><a href="/users/register">Crea tu cuenta</a></p>
            </form>
        </section>

    <%- include('../partials/footer') %> 
</body>