<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head') %>

    <body>
        <%- include('../partials/header') %>
            <main>
                <section>
                    <div class="main-container">
                        <div class="wrapper-container">
                            <div class="container ">
                                <div class="product-cart">
                                    <table class="product-table">
                                        <thead>
                                            <tr>
                                                <th colspan="2">Producto</th>
                                                <th>Precio</th>
                                                <th>Cantidad</th>
                                                <th>Subtotal</th>
                                                <th>Eliminar</th>
                                            </tr>
                                        </thead>
                                        <%- include('../partials/cartItem') %>
                                        <%- include('../partials/cartItem') %>
                                        <%- include('../partials/cartItem') %>
                                    </table>
                                    <div class="bottom-options">
                                        <div class="keepbuying">
                                            <a href="/" class="link-keepbuying">Seguir Comprando</a>
                                        </div>
                                        <div class="empty-cart">
                                            <a href="#" class="link-empty-cart">Vaciar carro</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="cart-resume">
                                    <h3>Resumen de compra</h3>
                                    <form action="" class="promo-bar" method="POST">
                                        <div class="promo-code">
                                            <label>
                                                <input type="text" name="coupon-code"
                                                    placeholder="Agregar cupón de descuento">
                                            </label>
                                        </div>
                                        <i class="fas fa-tag"></i>
                                    </form>
                                    <div class="row">
                                        <div class="subtotal">
                                            <span>Subtotal</span>
                                        </div>
                                        <div class="amount-to-pay">
                                            <span>$xxx,xx</span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="shipping">
                                            <span>Envío</span>
                                        </div>
                                        <div class="amount-to-pay">
                                            <span>$xxx,xx</span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="total">
                                            <span>Total</span>
                                        </div>
                                        <div class="amount-to-pay">
                                            <span>$xxx,xx</span>
                                        </div>
                                    </div>
                                    <button type="submit" class="finish-purchease">FINALIZAR COMPRA</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </main>
            <%- include('../partials/footer') %>
    </body>

</html>